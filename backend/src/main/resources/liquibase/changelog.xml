<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">

    <changeSet id="1" author="fpileggi">
        <createTable tableName="users">
            <column name="id" type="int">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="email" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="active" type="boolean" defaultValueBoolean="true"/>
            <column name="token" type="varchar(200)"/>
        </createTable>
        <addAutoIncrement catalogName="ssafety_db"
                          columnDataType="int"
                          columnName="id"
                          incrementBy="1"
                          schemaName="public"
                          startWith="1"
                          tableName="users"/>
    </changeSet>

    <changeSet id="2" author="fpileggi">
        <createTable tableName="tenants">
            <column name="id" type="int">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="host" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="database_url" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="database_username" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="database_password" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="active" type="boolean" defaultValueBoolean="true"/>
        </createTable>
        <addAutoIncrement catalogName="ssafety_db"
                          columnDataType="int"
                          columnName="id"
                          incrementBy="1"
                          schemaName="public"
                          startWith="1"
                          tableName="tenants"/>
    </changeSet>

    <changeSet id="3" author="fpileggi">
        <addColumn tableName="users">
            <column name="recoverpass_token" type="varchar(255)"/>
        </addColumn>
    </changeSet>

    <changeSet id="4" author="rrosseti">
        <addUniqueConstraint tableName="users" columnNames="email" />
    </changeSet>

    <changeSet id="5" author="rrosseti">
        <createTable tableName="states">
            <column name="id" type="int">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(100)" >
                <constraints nullable="false"/>
            </column>
            <column name="acronym" type="varchar(2)" >
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addAutoIncrement catalogName="ssafety_db"
                          columnDataType="int"
                          columnName="id"
                          incrementBy="1"
                          schemaName="public"
                          startWith="1"
                          tableName="states"/>
    </changeSet>

    <changeSet id="6" author="rrosseti">
        <createTable tableName="cities">
            <column name="id" type="int">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(100)" >
                <constraints nullable="false"/>
            </column>
            <column name="state_id" type="int" >
                <constraints foreignKeyName="city_state_id" nullable="false" deleteCascade="false"/>
            </column>
        </createTable>
        <addAutoIncrement catalogName="ssafety_db"
                          columnDataType="int"
                          columnName="id"
                          incrementBy="1"
                          schemaName="public"
                          startWith="1"
                          tableName="cities"/>
    </changeSet>

    <changeSet id="7" author="rrosseti">
        <createTable tableName="constructions">
            <column name="id" type="int">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="cep" type="varchar(100)" ></column>
            <column name="name" type="varchar(100)" >
                <constraints nullable="false"/>
            </column>
            <column name="address" type="varchar(255)" > </column>
            <column name="status" type="varchar(100)" >
                <constraints nullable="false"/>
            </column>
            <column name="description" type="varchar(255)" > </column>
            <column name="highlight_url" type="varchar(255)" ></column>
            <column name="logo_url" type="varchar(255)" ></column>
            <column name="cei_url" type="varchar(255)" ></column>
            <column name="cei_code" type="varchar(100)" ></column>
        </createTable>
        <addAutoIncrement catalogName="ssafety_db"
                          columnDataType="int"
                          columnName="id"
                          incrementBy="1"
                          schemaName="public"
                          startWith="1"
                          tableName="constructions"/>
    </changeSet>

    <changeSet id="8" author="rrosseti">
        <createTable tableName="managers">
            <column name="id" type="int">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="email" type="varchar(100)" ></column>
            <column name="phone" type="varchar(100)" ></column>
        </createTable>
        <addAutoIncrement catalogName="ssafety_db"
                          columnDataType="int"
                          columnName="id"
                          incrementBy="1"
                          schemaName="public"
                          startWith="1"
                          tableName="constructions"/>
    </changeSet>

    <!--<changeSet id="8" author="rrosseti">-->
