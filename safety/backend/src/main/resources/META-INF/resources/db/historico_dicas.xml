<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
	xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd
    http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">
    
    <changeSet id="historico_dicas" author="Santiago">
        <validCheckSum>ANY</validCheckSum>

        <createTable tableName="historico_dicas">
        
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            
            <column name="id_wordpress" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            
           	<column name="id_usuario" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            
            <column name="id_categoria" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            
           	<column name="dica" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            
           	<column name="curtida" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            
           	<column name="data_visualizacao" type="DATE">
                <constraints nullable="false"/>
            </column>
                        
        </createTable>
    </changeSet>

</databaseChangeLog>