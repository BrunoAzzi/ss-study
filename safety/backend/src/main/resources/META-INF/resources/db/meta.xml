<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
	xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd
    http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">
    
    <changeSet id="meta" author="Gustavo">
        <validCheckSum>ANY</validCheckSum>
        <createTable tableName="meta">
        
            <column autoIncrement="true" name="id" type="BIGINT" >
                <constraints primaryKey="true"/>
            </column>
            
            <column name="usuario_id" type="BIGINT" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
            
            <column name="progresso" type="BIGINT" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>            
                              
            <column name="comprometimento" type="BIGINT" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>  
            
            <column name="troca_data" type="BIGINT" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>  
            
           	<column name="meta" type="VARCHAR(255)" defaultValue="not text">
                <constraints nullable="false"/>
            </column>
            
            <column name="categoria_id" type="BIGINT" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
            
            <column name="data_criacao" type="DATETIME" defaultValueDate="2017-03-03 00:00:00">
                <constraints nullable="false"/>
            </column>     
            
        </createTable>
    </changeSet>
</databaseChangeLog>